html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title 添加客户
    style(type='text/css').
      table {
      background-color: #CCCCCC;
      border: 1px;
      width: 100%;
      }
      table tr {
      height: 20px;
      }
      table tr div {
      text-align: right;
      }
      td font {
      color: red;
      }
      .mylable{
      color: red;
      font-size: 12px;
      }
  body
    div
      form(name='client_form', action='/productupdate', method='post' enctype="multipart/form-data")
        table
          tbody
            tr(bgcolor='#f5f5f5')
              td
                div
                  font *
                  |  商品类型:
              td#boxtd
                select#clientname(name="typeid")
                    each val in type
                      -if(data1.typeid==val.pid)
                        option(value=val.pid selected) #{val.name}
                      -else
                        option(value=val.pid) #{val.name}  
            tr(bgcolor='#f0f0f0')
              td
                div
                  font *
                  |  商品名:
              td
                input#password(type='text', name='productname', value=data1.name, size='30')
                input(type="hidden", name='id',value=data1.id)
            tr(bgcolor='#f0f0f0')
              td
                div
                  font *
                  |  商品介绍:
              td
                input#password(type='text', name='produce',value=data1.produce,size='30')
            tr(bgcolor='#f5f5f5')
              td
                div
                  font *
                  |  新价格:
              td#boxtd
                input#clientname(type='text', name='newprice', value=data1.newprice, size='30') 
            tr(bgcolor='#f5f5f5')
              td
                div
                  font 
                  |  老价格:
              td#boxtd
                input#clientname(type='text', name='oldprice', value=data1.oldprice, size='30')
            tr(bgcolor='#f5f5f5')
              td
                div
                  font *
                  |  商品图:
              td#boxtd
                input#clientname(type='file', name='productimg', value=data1.img, size='30')
            tr(bgcolor='#f5f5f5')
              td
                div
                  font *
                  |  折扣:
              td#boxtd
                input#clientname(type='text', name='discount', value=data1.discount, size='30')                   
            tr(bgcolor='#f5f5f5')
              td
              td(colspan='2')
                input(type='submit', value='提交')
                input(type='reset', value='重置')