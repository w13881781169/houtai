html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title 添加客户
    style(type='text/css').
      table {
      background-color: #CCCCCC;
      border: 1px;
      width: 100%;
      }
      table tr {
      height: 20px;
      }
      table tr div {
      text-align: right;
      }
      td font {
      color: red;
      }
      .mylable{
      color: red;
      font-size: 12px;
      }
  body
    div
      form(name='client_form', action='update', method='post' enctype="multipart/form-data")
        table
          tbody
            tr(bgcolor='#f5f5f5')
              td
                div
                  font *
                  |  姓名:
              td
                input#clientname(type='text', name='clientname', value=name, size='30')
                input(type='hidden', name='id', value=id, size='30')
            tr(bgcolor='#f0f0f0')
              td
                div
                  font *
                  |  密码:
              td
                input#password(type='password', name='password', value=password, size='30')
            tr(bgcolor='#f0f0f0')
              td
                div
                  font *
                  |  上传头像:
              td
                input#password(type='file', name='head',size='30')    
            tr(bgcolor='#f5f5f5')
              td
              td(colspan='2')
                input(type='submit', value='提交')
                input(type='reset', value='重置')
